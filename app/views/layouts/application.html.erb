<!DOCTYPE html>
<html>
	<head>
		<title>Simple Rails Blog</title>
		<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
		<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<div class="main">
			<header>
				<div class="actions">
<% if user_signed_in? %>
					<p>
						<%= link_to	'View Profile', current_user %> | 
						<%= link_to 'Log Out', destroy_user_session_path, :method => :delete %>
					</p>
<% else %>
					<p>
						<%= link_to 'Sign In', new_user_session_path %> | 
						<%= link_to 'Sign Up', new_user_registration_path %>
					</p>
<% end %>
				</div>
				<h1><%= link_to 'Simple Rails Blog', root_path %></h1>
			</header>

<% flash.each do |name, msg| %>
			<%= content_tag(:div, msg, class: "alert") %>
<% end %>

<%= yield %>
			
			<footer>
				<div class="disclaimer">
					<p>Developed by AJ Foster for COP 4912.</p>
				</div>
				<div class="actions">
<% if user_signed_in? %>
					<p>
						<%= link_to	'View Profile', edit_user_registration_path %> | 
						<%= link_to 'Log Out', destroy_user_session_path, :method => :delete %>
					</p>
<% else %>
					<p><%= link_to 'Sign In', new_user_session_path %> | <%= link_to 'Sign Up', new_user_registration_path %></p>
<% end %>
				</div>
			</footer>
		</div>
	</body>
</html>