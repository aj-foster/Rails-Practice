			<section class="posts">
				<div class="info">
					<h2><%= @post.title %></h2>
					By <%= link_to @post.author.name, @post.author %>
				</div>
				<div class="body">
					<%= simple_format(@post.body) %>
				</div>
<% if can? :manage, @post %>
				<div class="actions">
					<h3>Post Actions:</h3>
					<p>
						<%= link_to 'Edit Post', edit_post_path(@post) %> | 
						<%= link_to	'Delete Post', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
					</p>
					
				</div>
<% end %>
			</section>
			<hr>
			<section class="comments">
				<h3>Comments</h3>
				<%= render @post.comments %>
<% if user_signed_in? %>
				<%= render "comments/form" %>
<% else %>
				<p><%= link_to "Sign In", new_user_session_path %> or <%= link_to "Sign Up", new_user_registration_path %> to post a comment.</p>
<% end %>
			</section>