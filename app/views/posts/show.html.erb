			<section class="posts">
				<h2><%= @post.title %></h2>
				<div class="body">
					<%= simple_format(@post.body) %>
				</div>
				<div class="comments">
					<%= render @post.comments %>
<% if user_signed_in? %>
					<%= render "comments/form" %>
<% else %>
					<p><%= link_to "Sign In", new_user_session_path %> or <%= link_to "Sign Up", new_user_registration_path %> to post a comment.</p>
<% end %>
				</div>
			</section>